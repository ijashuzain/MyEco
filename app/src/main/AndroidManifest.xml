<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.xanthron.myeco">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:sharedUserId="android.uid.system"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyECO">
        <activity
            android:name=".LoanActivity"
            android:label="Loan" />
        <activity
            android:name=".ExpenseActivity"
            android:label="Expense"/>
        <activity
            android:name=".IncomeActivity"
            android:label="Income"/>
        <activity
            android:name=".StatementsActivity"
            android:label="Statements"/>
        <activity
            android:name=".MainActivity"
            android:label="MyECO">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>